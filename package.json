{
  "name": "new-world-crafting-calculator",
  "version": "1.9.0",
  "description": "A comprehensive crafting calculator for Amazon's New World MMO with advanced OCR inventory detection, customizable hotkeys, persistent configuration system, and interactive crafting tree visualization.",
  "author": "Involvex",
  "homepage": "https://involvex.github.io/newworld-dailycraft-calc/",
  "sponsor": {
    "url": "https://github.com/sponsors/involvex"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/involvex/newworld-dailycraft-calc.git"
  },
  "keywords": [
    "new-world",
    "mmo",
    "crafting",
    "calculator",
    "gaming",
    "ocr",
    "electron",
    "typescript",
    "react",
    "configuration",
    "hotkeys",
    "presets"
  ],
  "main": "electron.js",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "build:electron": "vite build --mode electron",
    "build:electron:prod": "cross-env NODE_ENV=production vite build --mode electron",
    "build:pages": "cross-env VITE_BASE_URL=/newworld-dailycraft-calc/ vite build",
    "preview": "vite preview",
    "electron-dev": "concurrently \"npm:dev\" \"npm:start-electron-dev\"",
    "start-electron-dev": "wait-on http://localhost:3000 && cross-env NODE_ENV=development \"node_modules/.bin/electron\" electron.js",
    "electron": "npm run build:electron && npx electron electron.js",
    "electron:prod": "npm run build:electron:prod && cross-env NODE_ENV=production npx electron electron.js",
    "dist": "npm run build:electron:prod && cross-env NODE_ENV=production electron-builder --config.compression=maximum --config.win.target=portable",
    "deploy": "npm run build:pages && copy dist\\index.html docs\\index.html && xcopy dist\\assets docs\\assets /E /I /Y",
    "build:prod": "powershell -ExecutionPolicy Bypass -File .\\build-prod.ps1",
    "push-pages": "npm run deploy && git add docs/ && git commit -m \"Deploy to GitHub Pages\" && git push origin main",
    "serve": "npm run build && node simple-server.js",
    "portable": "npm run build:electron && node build-portable.js",
    "build-all": "node build-all.js",
    "build-web": "node build-web-only.js",
    "lint": "npx eslint . --config eslint.config.mjs",
    "lint:fix": "npx eslint . --config eslint.config.mjs --fix",
    "format": "npx prettier . --config .prettierrc.yaml --write",
    "format:check": "npx prettier . --config .prettierrc.yaml --check",
    "release": "npm run format && npm run lint:fix && npm run build-all && git add . &&  git tag -a $npm_package_version && git commit -m \"Release v$npm_package_version\" && git push origin main --follow-tags",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@google/genai": "^1.22.0",
    "@vitejs/plugin-react": "^5.0.4",
    "cloneable-readable": "^3.0.0",
    "core-util-is": "^1.0.3",
    "globals": "^16.4.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@eslint/css": "^0.12.0",
    "@eslint/js": "^10.0.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.4.0",
    "@types/node": "^24.7.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.20",
    "eslint-plugin-react": "^7.37.5",
    "generate": "^0.14.0",
    "generate-eslint": "^1.0.0",
    "gh-pages": "^6.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vite": "^7.1.9",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.involvex.newworld-calculator",
    "productName": "New World Crafting Calculator",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "electron.js",
      "preload.js",
      "logo.png",
      "services/**/*",
      "dist/**/*",
      "!dist/**/*.map",
      "fokusnewworldscreenshot.ps1"
    ],
    "icon": "logo.png",
    "compression": "maximum",
    "win": {
      "target": {
        "target": "portable",
        "arch": [
          "x64"
        ]
      },
      "icon": "logo.png",
      "forceCodeSigning": false
    },
    "publish": null,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
