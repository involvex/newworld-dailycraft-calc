{
  "name": "new-world-crafting-calculator",
  "author": {
    "name": "Involvex"
  },
  "description": "A crafting calculator for New World MMORPG.",
  "private": true,
  "version": "0.1.1",
  "main": "electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "npm run build && node simple-server.js",
    "portable": "npm run build && node build-portable.js",
    "deploy": "npm run build && gh-pages -d dist",
    "electron": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "build-all": "node build-all.js",
    "build-web": "node build-web-only.js"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^22.16.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.17",
    "gh-pages": "^6.0.0",
    "tailwindcss": "^0.0.0-insiders.9169d73",
    "typescript": "~5.7.2",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.involvex.newworld-calculator",
    "productName": "New World Crafting Calculator",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron.js"
    ],
    "win": {
      "target": "portable"
    },
    "publish": null
  }
}